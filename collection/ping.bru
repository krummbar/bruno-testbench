meta {
  name: ping
  type: http
  seq: 1
}

get {
  url: {{host}}/ping
  body: json
  auth: basic
}

vars:pre-request {
  m4: 1
}

assert {
  res.status: 200
}

script:post-response {
  console.log(res.getBody());
}

tests {
  test("should ping pong", function() {
    const data = res.getBody();
    expect(data).to.equal('pong');
  });
}
